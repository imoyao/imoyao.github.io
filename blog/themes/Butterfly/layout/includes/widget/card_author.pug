.card-widget.card-info
  .card-content
    .card-info-avatar.is-center
      img.avatar-img(src=url_for(theme.avatar) onerror=`this.onerror=null;this.src='` + url_for(theme.lodding_bg.flink) + `'` alt="avatar")
      .author-info__name= config.author
      .author-info__description= config.description

    .card-info-data
      if site.posts.length
        .card-info-data-item.is-center
          a(href=url_for(config.archive_dir) + '/')
            .headline= _p('aside.articles') 
            .length_num= site.posts.length

      if site.tags.length
        .card-info-data-item.is-center       
          a(href=url_for(config.tag_dir) + '/' )
            .headline= _p('aside.tags')
            .length_num= site.tags.length

      if site.categories.length
        .card-info-data-item.is-center      
          a(href=url_for(config.category_dir) + '/')
            .headline= _p('aside.categories') 
            .length_num= site.categories.length

    .card-info-bookmark.is-center
      a#bookmark-it.bookmark.button--primary.button--animated(href="https://www.zhihu.com/people/imoyao/" title= _p('aside.card_follow_zhihu') target="_blank")
        i.fab.fa-zhihu(aria-hidden="true")
        span= _p('aside.card_follow_zhihu') || 'Follow Me'

    //.card-info-bookmark.is-center
    //  a#bookmark-it.bookmark.button--primary.button--animated(href="javascript:;" title= _p('aside.card_bookmark') target="_self")
    //    i.fa.fa-bookmark(aria-hidden="true")
    //    span= _p('aside.card_bookmark') || 'Follow Me'

    if(theme.social)
        .card-info-social-icons.is-center
          each url, icon in theme.social
            a.social-icon-addr(href=url target="_blank")
              i(class=icon aria-hidden="true")

    if(theme.status && theme.status.enable)
      if theme.status.fa.enable
        .card-info-status.is-center
          each content, icon in theme.status.fa_status
            i(class=icon aria-hidden="true")
            span!=`${content}`
      else if theme.status.emoji.enable
        .card-info-status.is-center
          span!=`${theme.status.emoji.emoji_status}`
