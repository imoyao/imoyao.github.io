#footer-wrap
  - var now = new Date()
  - var nowYear = now.getFullYear()
  if theme.since && theme.since != nowYear
    .copyright!= 'Copyright' + ` &copy; ${theme.since} - ${nowYear}` + ' ' +`${config.title}.`+' All Rights Reserved.'
  else
    .copyright!= 'Copyright' + ` &copy;${nowYear}` + ' ' +`${config.title}.`+' All Rights Reserved.'
  .footer-slogan
    a(href='/about/')
      span=config.author
    i.fa.fa-heart(aria-hidden="true")
    span#sp-slogan= config.slogan
  if theme.footer_copyright.enable
    .framework-info
      a(href='http://hexo.io')
        span Hexo
      span= ' ' + _p('footer.driven')
      span.footer-separator |
      span= _p('footer.theme') + ' '
      a(href='https://github.com/jerryc127/hexo-theme-butterfly')
        span Butterfly
  if theme.footer_custom_text
    .footer_custom_text!=`${theme.footer_custom_text}`   
  if theme.ICP.enable
    .icp
      a(href=theme.ICP.url)
        if theme.ICP.icon
          img.icp-icon(src=url_for(theme.ICP.icon))
        span=theme.ICP.text
